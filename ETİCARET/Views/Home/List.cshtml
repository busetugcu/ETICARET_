@using ETİCARET.Models
@model List<ProductModel>
@{
    ViewBag.Title = "List";
}

<div class="row mt-3">
    <div class="col-3">
        <!--CAtegories-->
        @Html.Action("GetCategories")

    </div>
    <div class="col-9">
        <!--Products-->
        @if (Model.Count() == 0)
        {
            <div class="alert alert-warning" role="alert">
                <i class="fa-solid fa-circle-xmark"></i>
                Bu Kategoride bir ürün bulunamadı
            </div>
        }
        else
        {
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fa-solid fa-square-check"></i>
                    <strong>@Model.Count()</strong> adet ürün bulundu.
                </div>
            }
        }


        @Html.Partial("_ProductList", Model)
    </div>
</div>
